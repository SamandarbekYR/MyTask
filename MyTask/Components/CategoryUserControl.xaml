<UserControl x:Class="MyTask.Components.CategoryUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyTask.Components"
             mc:Ignorable="d" 
             d:DesignHeight="35"  MinWidth="60">
    <Grid Margin="3">
        <Border CornerRadius="8" Background="White"
                Cursor="Hand"
                MouseLeftButtonDown="CategoryCheck">
            <Label x:Name="CategoryName"
                   Content="Coffee" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontFamily="JetBrains Mono"
                   FontSize="14"/>
        </Border>
    </Grid>
</UserControl>
